@{
    
    ViewData["Title"] = "Animal List";
}

<h1>Animals</h1>
@Html.ActionLink( "Add", "Insert", "Animal" )

<table>
    <thead>
        <tr>
            <td>Id</td>
            <td>NickName</td>
            <td>Age</td>
            <td>Species</td>
        </tr>
    </thead>
    <tbody>
        @{
            List<AnimalModel> animals = ViewBag.Animals;
            foreach ( AnimalModel item in animals )
            {
                <tr>
                    <td>@Html.ActionLink( @item.Id.ToString( ), "Detail", "Animal", new { @id = item.Id } )</td>
                    <td>@item.NickName</td>
                    <td>@item.Age</td>
                    <td>@item.Species</td>
                    <td>@Html.ActionLink( "Delete", "Delete", "Animal", new { @id = item.Id } )</td>
                </tr>
            }
        }
    </tbody>
</table>

